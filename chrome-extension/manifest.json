{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "0.0.1",
  "default_locale": "en",
  "background": {
    "scripts": ["build/background.min.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["build/content.min.js"],
    "run_at": "document_start"
  }],
  "permissions": [
    "activeTab",
    "webRequest",
    "*://*.tripadvisor.com/"
  ]
}
